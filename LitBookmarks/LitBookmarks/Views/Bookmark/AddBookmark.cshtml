@model LitBookmarks.Models.BookmarkViewModel
@{
    ViewBag.Title = "AddBookmark";
}
<link href="~/Styles/bookmarkStyles.css" rel="stylesheet" />
<link href='http://fonts.googleapis.com/css?family=Open Sans' rel='stylesheet' type='text/css'>
<link href="http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css" rel="stylesheet">
<div id="content">
    <h1>Add bookmark</h1>

    <form action="/Bookmark/AddBookmark" method="post" autocomplete="on">
        <p>
            <label for="username">
               Book name
                <span class="required">*</span>
            </label>
            <input type="text" name="Book" id="Book" required="required" placeholder="Book" />
        </p>

        <p>
            <label for="username">
                Book Author
                <span class="required">*</span>
            </label>
            <input type="text" name="Author" id="Author" placeholder="Author" required="required" />
        </p>

        <p>
            <label for="usersite"> Name of bookmark</label>
            <input type="text" name="Name" id="Name" placeholder="my bookmark" />
        </p>

        <p>
            <label for="subject" class="icon-bullhorn"> Genres</label>
            <input type="text" name="Genre" id="Genre" placeholder="Please choose genres." />
        </p>

        <p>
            <label for="message" class="icon-comment">
            Description
                <span class="required">*</span>
            </label>
            <textarea id ="Description" name ="Description" placeholder="Your impression from book " required="required"></textarea>
        </p>
        <p class="indication">
            Fields with
            <span class="required"> * </span>are required
        </p>

        <input type="submit" value="Add bookmark" />

    </form>
</div>
